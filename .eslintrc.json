{
	"root": true,
	"extends": [
		"eslint:recommended", "plugin:@typescript-eslint/recommended"
	],
	"env": {
		"es6": true,
		"browser": true,
		"jest": true
	},
	"plugins": [
		"@typescript-eslint"
	],
	"rules": {
		"no-plusplus": 0,
		"no-underscore-dangle": 0,
		"no-param-reassign": 0,
		"no-restricted-syntax": [
			"error",
			"LabeledStatement",
			"WithStatement"
		],
		"prefer-arrow-callback": "off",
		"function-paren-newline": [
			"error",
			"consistent"
		],
		"func-names": [
			"error",
			"never"
		],"@typescript-eslint/indent": [
			2,
			"tab"
		],
		"@typescript-eslint/comma-dangle": [
			"error",
			{
				"arrays": "never",
				"objects": "never",
				"imports": "never",
				"exports": "never",
				"functions": "never"
			}
		],
		"no-alert": "off"
	},
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"project": "./tsconfig.json"
	}
}
